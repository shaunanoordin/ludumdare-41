dark-colour = #333
mid-colour = #999
light-colour = #fff
primary-colour = #c33
highlight-colour = #f33

*
  box-sizing: border-box

:root
  font-family: "Lucida Console", monospace
  font-size: 16px
  background: dark-colour url("../assets/simple-bg.png")
  color: dark-colour
  touch-action: none  //Prevent touch input outside the #app from triggering standard scroll/navigate actions.

html
body
  padding: 0
  margin: 0
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

#app
  width: 100%
  height: 100%
  overflow: hidden
  flex: 0 0 auto
  display: flex
  flex-direction: column

  #canvas
    flex: 0 0 auto
    display: block
    margin: 0 auto
    touch-action: none  //Prevents IE/Edge from intrepreting touch input as scroll/pan commands.
    cursor: pointer
    
  #controls
    flex: 1 1 auto
    background: light-colour
    overflow: auto
    touch-action: pan-y  //Allow standard "scrolling" touch input for this element.

    #message
      text-align: center
      padding: 0.5em
    
    #orders
      text-align: center
      list-style: none
      padding: 0
      margin: 0
      
      li
        padding: 0.5em 0
        margin: 0
        border-top: 1px solid mid-colour
      
        .ingredient
          display: inline-block
          margin: 0 0.2em
          width: 2em
          height: 2em
          background-image: url("../assets/ingredients.png")
          background-size: 16em 2em
          background-repeat: no-repeat
          
        .ingredient-1
          background-position: -2em 0em
        
        .ingredient-2
          background-position: -4em 0em
        
        .ingredient-3
          background-position: -6em 0em
        
        .ingredient-4
          background-position: -8em 0em
        
        .ingredient-5
          background-position: -10em 0em
        
        .ingredient-6
          background-position: -12em 0em
