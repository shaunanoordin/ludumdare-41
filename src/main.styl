dark-colour = #333
light-colour = #fff
primary-colour = #c33
highlight-colour = #f33

*
  box-sizing: border-box

:root
  font-family: "Lucida Console", monospace
  font-size: 16px
  background: dark-colour url("../assets/simple-bg.png")
  color: dark-colour
  
  touch-action: none  //Ludum Dare special

html
body
  padding: 0
  margin: 0
  width: 100%
  height: 100%

#app
  width: 100%
  height: 100%
  overflow: hidden
  display: flex
  flex-direction: column

  #canvas
    display: block
    margin: 0 auto
    touch-action: none  //Prevents IE/Edge from intrepreting touch input as scroll/pan commands.
    flex: 0 0 auto
    
  #controls
    background: light-colour
    flex: 1 1 auto
    overflow: auto
